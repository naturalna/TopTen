<common:LayoutAwarePage
    x:Class="TopTenApp.Views.ArticlesByGroupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TopTenApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:behavior="using:TopTenApp.Behavior"
    DataContext="{Binding ArticlesInGroupViewModel, Source={StaticResource Locator}}"
    xmlns:common="using:TopTenApp.Common">

    <Grid
        Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
        Name="Container">
        <Grid
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="60"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <Border
            Grid.Column="1"
            Grid.Row="0">
                <TextBlock
            Margin="0 20 0 0"
            Text="Десетте най"
            FontWeight="Light"
            FontSize="42"></TextBlock>
            </Border>
            <Border
                Grid.Column="0"
                Grid.Row="0">
                <Button
                    Margin="20"
                    Content="Назад"
                    Command="{Binding BackCommand}">
                </Button>
            </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="1">
                    <local:UserControlNavigationView HorizontalAlignment="Left"/>
                </Border>
            <GridView
                SelectionMode="Single"
               behavior:SelectionChangeBehavior.SelectionChanged = "{Binding SelectionChange}"
                ItemsSource="{Binding AllArticlesInGroup}"
                      Grid.Column="1"
                      Grid.Row="2"
                Padding="10 20 10 10"
                      >
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="1100" Height="220">
                            <Grid.Background>
                                <ImageBrush ImageSource="ms-appx:///Assets/background2.jpg"
                                Stretch="UniformToFill" />
                            </Grid.Background>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="150"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Border
                                HorizontalAlignment="Center"
                                Margin="0 10 0 0"
                                Grid.Row="1"
                                Width="150"
                                Height="150">
                            <Image
                                Stretch="Fill"
                                Grid.Row="1"
                                Width="150"
                                Height="150"
                                Source="{Binding Image}"></Image>
                            </Border>
                            <Border
                                Grid.Row="0"
                                Background="Black"
                                Opacity="0.5"
                                >
                            <TextBlock
                                
                                Text="{Binding Name}"></TextBlock>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
            <Button
            Content="GoToArticle"
            Command="{Binding GoToArticle}"
            Width="120"
            Height="50"
                Margin="100">
            
        </Button>
          </Grid>
    </Grid>
</common:LayoutAwarePage>

