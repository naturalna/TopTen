<Page
    x:Class="TopTenApp.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TopTenApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding RegisterViewModel, Source={StaticResource Locator}}">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border
            Grid.Column="1"
            Grid.Row="0">
            <TextBlock
            Margin="0 20 0 0"
            Text="Десетте най"
            FontWeight="Light"
            FontSize="42"></TextBlock>
        </Border>
        <Border 
            Grid.Row="1"
            Grid.Column="1">
            <StackPanel>
                <Border
                     DataContext="{Binding User, Mode=TwoWay}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock
                            FontSize="20"
                            Padding="0 20 0 0"
                            FontWeight="Light"
                            Height="50"
                            Grid.Row="0">Потребителско име</TextBlock>
                        <TextBox 
                                 FontSize="20"
                                 Padding="0 20 0 0"
                                 FontWeight="Light"
                                 Height="50"
                                 Grid.Row="1"
                                 Text="{Binding Username, Mode=TwoWay}"></TextBox>
                        <TextBlock
                                 FontSize="20"
                                 Padding="0 20 0 0"
                                 FontWeight="Light"
                                 Height="50"
                                 Grid.Row="2">Парола</TextBlock>
                        <PasswordBox 
                                   FontSize="20"
                                 Padding="0 20 0 0"
                                 FontWeight="Light"
                                   Height="50"
                                   Grid.Row="3"
                                   Password="{Binding Password,Mode=TwoWay}"></PasswordBox>
                        <TextBlock
                            FontSize="20"
                                 Padding="0 20 0 0"
                                 FontWeight="Light"
                                 Height="50"
                                 Grid.Row="4">E-mail адрес</TextBlock>
                        <TextBox 
                            FontSize="20"
                                 Padding="0 20 0 0"
                                 FontWeight="Light"
                                 Height="50"
                                 Grid.Row="5"
                                 Text="{Binding Email, Mode=TwoWay}"></TextBox>
                    </Grid>
                </Border>                
                    <Button 
                        Padding="60 0 60 0"
                    Margin="440 30 0 0"
                    Content="Register"
                    Command="{Binding RegisterCommand}"
                    Height="50" >
                    </Button>               
            </StackPanel>
        </Border>
    </Grid>
</Page>

