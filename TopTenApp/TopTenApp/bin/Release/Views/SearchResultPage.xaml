<Page
    x:Class="TopTenApp.Views.SearchResultPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TopTenApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <ScrollViewer
                ScrollViewer.VerticalScrollMode="Auto"
                Grid.Column="1"
                Grid.Row="1"
                >
                <ScrollViewer.Background>
                    <ImageBrush ImageSource="ms-appx:///Assets/background2.jpg"
                                Stretch="UniformToFill" />
                </ScrollViewer.Background>
                <Border 
                    Grid.Column="1"
                    Grid.Row="1"
                    DataContext="{Binding Article}">
                    <StackPanel>
                        <Border
                            
                                Background="Black"
                                Opacity="0.5">
                        <TextBlock
                                FontSize="20"
                                Height="60"
                                Text="{Binding Title}"></TextBlock>
                        </Border>
                        <Grid
                            HorizontalAlignment="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="850"/>
                            </Grid.ColumnDefinitions>
                            <Image 
                                Margin="10"
                                   Grid.Column="0"
                                   Source="{Binding Image}"
                                   Width="300"
                                   Height="300"
                                   Stretch="Fill"></Image>
                            <Border
                                Width="850"
                                Grid.Column="1"
                                Background="Black"
                                Opacity="0.5">
                            <TextBlock
                                TextWrapping="Wrap"
                                Padding="10 0 40 0"
                                FontSize="18"
                                      Width="700"
                                      Text="{Binding Content}"></TextBlock>
                            </Border>
                        </Grid>
                        <Border>
                            <ItemsControl
                        ItemsSource="{Binding Ranglist}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Border
                                                Background="Black"
                                                Opacity="0.5">                                                                                <TextBlock 
                                                            Text="{Binding Palce}"
                                                            FontSize="18"
                                                            ></TextBlock>
                                            </Border>

                                            <Image 
                                                Margin="10"
                                            Source="{Binding Image}"
                                            Width="200"
                                            Height="200"></Image>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>

