<common:LayoutAwarePage
    
    x:Class="TopTenApp.Views.FavoriteSelectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TopTenApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding FavoriteSelectionViewModel, Source={StaticResource Locator}}"
     xmlns:common="using:TopTenApp.Common">

    <Grid
        Name="Container"
        Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="60"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Border
            Grid.Column="1"
            Grid.Row="0">
                <TextBlock
            Margin="0 20 0 0"
            Text="Десетте най любими"
            FontWeight="Light"
            FontSize="42"></TextBlock>
            </Border>
            <Border
                Grid.Column="0"
                Grid.Row="0"
                >
                <Button
                    Margin="20 0 0 0 "
                    Content="Back"
                    Command="{Binding BackCommand}"
                    >
                </Button>
            </Border>
            <Border
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Left">
                <local:UserControlNavigationView/>
            </Border>
            <ScrollViewer
                Margin="15 0 0 0"
                Grid.Column="1"
                Grid.Row="2"
                ScrollViewer.VerticalScrollBarVisibility="Hidden">
                <ScrollViewer.Background>
                    <ImageBrush ImageSource="ms-appx:///Assets/background2.jpg"
                                Stretch="UniformToFill" />
                </ScrollViewer.Background>
                <ItemsControl
                    Margin="0 20 0 0"
                        ItemsSource="{Binding AllFavorite}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                        <StackPanel>
                                
                                <Border
                                    Background="Black"
                                    Opacity="0.7">
                                    <TextBlock
                                        TextAlignment="Center"
                                        Height="60"
                                        FontSize="20"
                                        Text="{Binding Title}"></TextBlock>
                                </Border>
                                <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="350"/>
                                        <ColumnDefinition  />
                                </Grid.ColumnDefinitions>                                    
                                    <Image 
                                       Grid.Column="0"
                                       Source="{Binding Image}"
                                       Width="350"
                                       Height="350"
                                       Stretch="Fill"></Image>
                                    <Border
                                        Grid.Column="1"
                                        Background="Black"
                                        Opacity="0.7">
                                    <TextBlock
                                        TextAlignment="Left"
                                        Padding="10"
                                        TextWrapping="Wrap"
                                        FontSize="18"
                                        Width="800"
                                        Text="{Binding Content}"></TextBlock>
                                    </Border>
                                </Grid>
                            <Border
                                BorderBrush="AntiqueWhite"
                                BorderThickness="2">
                                <ItemsControl
                        ItemsSource="{Binding Ranglist}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                    <Border
                                                        Background="Black"
                                                        Opacity="0.7">
                                                        <TextBlock 
                                                                Height="40"
                                                                Text="{Binding Palce}"
                                                                FontSize="18"
                                                                Padding="30 0 30 0"
                                                            ></TextBlock>
                                                    </Border>
                                                    <Image 
                                                    Source="{Binding Image}"
                                                    Width="200"
                                                    Height="200"
                                                    Stretch="Fill"
                                                    Margin="10"></Image>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</common:LayoutAwarePage>

