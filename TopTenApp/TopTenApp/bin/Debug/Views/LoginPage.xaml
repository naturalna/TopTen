<Page
    x:Class="TopTenApp.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TopTenApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:src="using:TopTenApp.ViewModel"
    mc:Ignorable="d"
    DataContext="{Binding LoginViewModel, Source={StaticResource Locator}}">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border
            Grid.Column="1"
            Grid.Row="0">
        <TextBlock
            Margin="0 20 0 0"
            Text="Десетте най"
            FontWeight="Light"
            FontSize="42"></TextBlock>
        </Border>
        <Border 
            Grid.Row="1"
            Grid.Column="1"
            BorderBrush="BurlyWood">
            <StackPanel>
                <Border
                    Margin="120 120 0 0"
                     DataContext="{Binding CreatedUser, Mode=TwoWay}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock
                            Height="50"
                            FontSize="20"
                            Padding="0 20 0 0"
                            FontWeight="Light"
                            Grid.Row="0">Потребителско име</TextBlock>
                        <TextBox 
                            Height="50"
                            Grid.Row="1"
                            FontSize="20"
                            Padding="0 20 0 0"
                            FontWeight="Light"
                         Text="{Binding Username, Mode=TwoWay}"></TextBox>
                        <TextBlock
                            Height="50"
                            FontSize="20"
                            Padding="0 20 0 0"
                            FontWeight="Light"
                         Grid.Row="2">Парола</TextBlock>
                        <PasswordBox 
                         Height="50"
                         FontSize="20"
                         Padding="0 20 0 0"
                         FontWeight="Light"
                         Grid.Row="3"
                         Password="{Binding Password,Mode=TwoWay}"></PasswordBox>                     
                    </Grid>
                </Border>
                <Grid
                    Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button 
                       FontSize="20"
                       FontWeight="Light"
                       Margin="120 30 0 0"
                       Grid.Column="0"
                       Content="Вход"
                       Command="{Binding LoginCommand}"
                       Height="60" Width="180">
                    </Button>
                  <Button
                    Margin="110 30 0 0"
                    Grid.Column="1"
                    FontSize="20"
                    FontWeight="Light"
                    Command="{Binding RegisterCommand}"
                    Content="Регистрация" Height="60" Width="200">
                  </Button>
            </Grid>
            </StackPanel>
        </Border>     
    </Grid>
</Page>

